{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "focuslist",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../frontend/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd frontend && npm run dev",
    "beforeBuildCommand": "cd frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "FocusList",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:focuslist.db"]
    },
    "cli": {
      "description": "FocusList CLI Plugin",
      "args": [
        {
          "name": "verbose",
          "short": "v",
          "description": "Verbosity level"
        }
      ],
      "subcommands": {
        "task": {
          "description": "Manage tasks",
          "args": [
            {
              "name": "add",
              "takesValue": true,
              "description": "Add a new task"
            },
            {
              "name": "list",
              "description": "List all tasks"
            },
            {
              "name": "complete",
              "takesValue": true,
              "description": "Complete a task by ID"
            }
          ]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
